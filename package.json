{
  "name": "serverless-task-manager",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "infra"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "dev:backend": "npm run dev --workspace=apps/backend",
    "build": "npm run build --workspaces",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "build:backend": "npm run build --workspace=apps/backend",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "deploy": "npm run deploy --workspace=infra",
    "deploy:frontend": "npm run deploy:frontend --workspace=infra",
    "deploy:backend": "npm run deploy:backend --workspace=infra"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
} 